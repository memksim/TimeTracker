<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/reset_timer"
        android:layout_width="@dimen/small_image_button_size"
        android:layout_height="@dimen/small_image_button_size"
        android:background="@drawable/reset_button_background" />

    <ImageView
        android:id="@+id/play_pause_timer"
        android:layout_width="@dimen/image_button_size"
        android:layout_height="@dimen/image_button_size"
        android:layout_marginStart="@dimen/spacing_24"
        android:background="@drawable/play_button_background" />

    <ImageView
        android:id="@+id/stop_timer"
        android:layout_width="@dimen/small_image_button_size"
        android:layout_height="@dimen/small_image_button_size"
        android:layout_marginStart="@dimen/spacing_24"
        android:background="@drawable/stop_button_background" />
</LinearLayout>